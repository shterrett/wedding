<% provide(:title, 'New RSVP') %>

<%= form_for @attendee do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :email %>
<%= f.email_field :email %>

<%= f.label :vegetarian %>
<%= f.select :vegetarian, {"I like eating tasty animals" => false, "Eww - nothing with eyes!" => true } %>

<% end %>