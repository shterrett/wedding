<!DOCTYPE html>
<html>
<head>
  <title>Wedding</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
	<%= stylesheet_link_tag "styles", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<%= yield :javascript_includes %>
	<meta name="viewport" content="width=device-width" />
	<link href='http://fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css'>
</head>
<body>
	<header class="main-header">
		<hgroup>
			<h2 class="name">Kate</h2>
			<h1 class="wedding">Wedding</h1>
			<h2 class="name">Stuart</h2>
		</hgroup>
		<nav class="main-nav">
				<%= link_to "When", root_path(anchor: "when"), id: 'when-link' %>
				<%= link_to "Where", root_path(anchor: "where"), id: 'where-link' %>
				<%= link_to "How", root_path(anchor: "how"), id: 'how-link' %>
				<%= link_to "Registry", root_path(anchor: "registry"), id: 'registry-link' %>
				<%= link_to "RSVP", invitations_path %>
		</nav>
	</header>
	<section class="flash">
		<% if flash[:error] -%>
		  <p class='error'><%=h flash[:error] %></p>
		<% end -%>
		<% if flash[:notice] -%>
		  <p class='notice'><%=h flash[:notice] %></p>
		<% end -%>
		<% if flash[:success] -%>
		  <p class='success'><%=h flash[:success] %></p>
		<% end -%>
	</section>
<%= yield %>


</body>
</html>
